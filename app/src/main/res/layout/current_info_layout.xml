<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/currentInfoContainer"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/windIcon"
            android:contentDescription="@string/app_name"
            android:src="@drawable/wind_icon"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="23dp"
            android:paddingTop="23dp"/>

        <TextView
            android:id="@+id/windTitle"
            android:layout_centerInParent="true"
            android:layout_alignTop="@+id/windIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widgetPrimaryTextColorGrey"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Wind"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignBottom="@+id/windIcon">
            <TextView
                android:id="@+id/windLabel"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widgetPrimaryTextColorGrey"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="15 Mph"/>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_weight="0.4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/humidityIcon"
            android:contentDescription="@string/app_name"
            android:src="@drawable/humidity_icon"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="23dp"
            android:paddingTop="23dp"/>

        <TextView
            android:id="@+id/humidityTitle"
            android:layout_centerInParent="true"
            android:layout_alignTop="@+id/humidityIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widgetPrimaryTextColorGrey"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Humidity"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignBottom="@+id/humidityIcon">
            <TextView
                android:id="@+id/humidityLabel"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widgetPrimaryTextColorGrey"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="25%"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="0.4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cloudCoverIcon"
            android:contentDescription="@string/app_name"
            android:src="@drawable/simple_overcast"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="23dp"
            android:paddingTop="23dp"/>

        <TextView
            android:id="@+id/cloudCoverTitle"
            android:layout_centerInParent="true"
            android:layout_alignTop="@+id/cloudCoverIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widgetPrimaryTextColorGrey"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Clouds"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignBottom="@+id/cloudCoverIcon">
            <TextView
                android:id="@+id/cloudCoverLabel"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widgetPrimaryTextColorGrey"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="3%"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="0.4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/uvIcon"
            android:contentDescription="@string/app_name"
            android:src="@drawable/simple_sunny"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="23dp"
            android:paddingTop="23dp"/>

        <TextView
            android:id="@+id/uvTitle"
            android:layout_centerInParent="true"
            android:layout_alignTop="@+id/uvIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widgetPrimaryTextColorGrey"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="UV"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignBottom="@+id/uvIcon">
            <TextView
                android:id="@+id/uvLabel"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widgetPrimaryTextColorGrey"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="10"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="0.4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pressureIcon"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pressure_icon"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="23dp"
            android:paddingTop="23dp"/>

        <TextView
            android:id="@+id/pressureTitle"
            android:layout_centerInParent="true"
            android:layout_alignTop="@+id/pressureIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/widgetPrimaryTextColorGrey"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Pressure"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignBottom="@+id/pressureIcon">
            <TextView
                android:id="@+id/pressureLabel"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widgetPrimaryTextColorGrey"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="1004"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>