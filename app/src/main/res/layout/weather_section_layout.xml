<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_marginEnd="10dp"
android:padding="5dp"
android:layout_width="95dp"
android:layout_height="150dp"
android:gravity="center"
android:orientation="vertical"
android:background="@drawable/rounded_rect">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sat "
            android:textColor="#83ffffff"
            android:textSize="12dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/weatherIcon"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/partly_cloudy_night" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:id="@+id/temperatureIcon"
            android:visibility="gone"
            android:layout_width="9dp"
            android:layout_height="13dp"
            android:background="?attr/temperatureIconDrawable"/>
        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="72Â°"
            android:textColor="?attr/weatherAccentColor"
            android:textSize="13dp"
            android:textStyle="bold" />
        <View
            android:id="@+id/precipIcon"
            android:visibility="gone"
            android:layout_width="9dp"
            android:layout_height="13dp"
            android:layout_marginLeft="8dp"
            android:background="?attr/dropletDrawable"/>
        <TextView
            android:id="@+id/precip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="60%"
            android:textColor="?attr/weatherAccentColor"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>