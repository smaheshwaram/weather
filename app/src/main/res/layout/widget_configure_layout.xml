<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/weatherPrimaryColor"
    android:gravity="center">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="Hi! Let's get your weather. Press get current location below to get started."
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <View
            android:layout_width="128dp"
            android:layout_height="192dp"
            android:background="@drawable/location_icon"/>

        <TextView
            android:id="@+id/currentLocationButton"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Current Location"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="9dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/double_rounded_divider"/>
    </LinearLayout>

    <TextView
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We use your course location to get your current weather conditions. Your location is never shared."
        android:textSize="11dp"
        android:textColor="#98ffffff"
        android:gravity="center"

        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

</LinearLayout>